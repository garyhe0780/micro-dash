{
  "name": "integration-test",
  "version": "1.0.0",
  "description": "App for integration tests",
  "scripts": {
    "clean": "rimraf out-tsc/* dist/*",

    "prebuild": "yarn install --check-files && yarn run clean",
    "build": "yarn run build:src && yarn run build:e2e && yarn run build:aot",
    "build:src": "tsc -p src/",
    "build:watch": "yarn run build:src -- -w",
    "build:e2e": "tsc -p e2e/",
    "build:aot": "node build.js",

    "serve": "lite-server -c=bs-config.json",
    "serve:aot": "lite-server -c bs-config.aot.json",
    "serve:e2e": "lite-server -c=bs-config.e2e.json",
    "serve:e2e-aot": "lite-server -c bs-config.e2e-aot.json",

    "start": "concurrently \"yarn run build:watch\" \"yarn run serve\"",

    "pree2e": "yarn run build",
    "e2e": "concurrently \"yarn run serve:e2e\" \"yarn run protractor\" --kill-others --success first",
    "pree2e:aot": "yarn run build",
    "e2e:aot": "concurrently \"yarn run serve:e2e-aot\" \"yarn run protractor\" --kill-others --success first",

    "preprotractor": "webdriver-manager update",
    "protractor": "protractor protractor.config.js"
  },
  "author": "Simonton Software",
  "license": "MIT",
  "dependencies": {
    "core-js": "^2.4.1",
    "micro-dash": "../dist/",
    "systemjs": "0.19.40"
  },
  "devDependencies": {
    "@angular/compiler": "^4.3.1",
    "@angular/compiler-cli": "^4.3.1",
    "@angular/core": "^4.3.1",
    "@types/jasmine": "2.5.36",
    "concurrently": "^3.4.0",
    "glob": "^7.1.1",
    "jasmine-core": "~2.4.1",
    "lite-server": "^2.2.2",
    "protractor": "~5.1.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.42.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rxjs": "^5.4.2",
    "typescript": "~2.3.0"
  }
}
